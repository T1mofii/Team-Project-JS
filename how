[36m@@ -0,0 +1,117 @@[m
[32m+[m[32m// =================================================================[m
[32m+[m[32m// == –ü–æ–≤–Ω–∏–π –∫–æ–¥ –¥–ª—è –ª–æ–≥—ñ–∫–∏ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –≤—ñ–∫–Ω–∞ –∑ –≤—ñ–¥–≥—É–∫–∞–º–∏[m
[32m+[m[32m// == src/js/feedback-modal.js[m
[32m+[m[32m// =================================================================[m
[32m+[m[32m(() => {[m
[32m+[m[32m  // --- 1. –ó–Ω–∞—Ö–æ–¥–∏–º–æ –≤—Å—ñ –Ω–µ–æ–±—Ö—ñ–¥–Ω—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –Ω–∞ —Å—Ç–æ—Ä—ñ–Ω—Ü—ñ ---[m
[32m+[m[32m  const openModalBtn = document.querySelector('[data-feedback-modal-open]');[m
[32m+[m[32m  const closeModalBtn = document.querySelector('[data-feedback-modal-close]');[m
[32m+[m[32m  const modal = document.querySelector('[data-feedback-modal]');[m
[32m+[m[32m  const body = document.querySelector('body');[m
[32m+[m[32m  const form = document.querySelector('.js-feedback-form');[m
[32m+[m
[32m+[m[32m  // --- 2. –ü—Ä–∏–∑–Ω–∞—á–∞—î–º–æ —Å–ª—É—Ö–∞—á—ñ–≤ –ø–æ–¥—ñ–π ---[m
[32m+[m[32m  if (openModalBtn) {[m
[32m+[m[32m    openModalBtn.addEventListener('click', toggleModal);[m
[32m+[m[32m  }[m
[32m+[m[32m  if (closeModalBtn && modal) {[m
[32m+[m[32m    closeModalBtn.addEventListener('click', toggleModal);[m
[32m+[m[32m    modal.addEventListener('click', handleBackdropClick);[m
[32m+[m[32m  }[m
[32m+[m[32m  if (form) {[m
[32m+[m[32m    form.addEventListener('submit', handleFormSubmit);[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  // --- 3. –§—É–Ω–∫—Ü—ñ—ó –¥–ª—è –∫–µ—Ä—É–≤–∞–Ω–Ω—è —Å—Ç–∞–Ω–æ–º –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –≤—ñ–∫–Ω–∞ ---[m
[32m+[m[32m  function toggleModal() {[m
[32m+[m[32m    if (!modal) return;[m
[32m+[m
[32m+[m[32m    modal.classList.toggle('is-hidden');[m
[32m+[m
[32m+[m[32m    if (!modal.classList.contains('is-hidden')) {[m
[32m+[m[32m      body.classList.add('no-scroll');[m
[32m+[m[32m      window.addEventListener('keydown', handleEscKeyPress);[m
[32m+[m[32m    } else {[m
[32m+[m[32m      body.classList.remove('no-scroll');[m
[32m+[m[32m      window.removeEventListener('keydown', handleEscKeyPress);[m
[32m+[m[32m    }[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  function handleBackdropClick(event) {[m
[32m+[m[32m    if (event.target === event.currentTarget) {[m
[32m+[m[32m      toggleModal();[m
[32m+[m[32m    }[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  function handleEscKeyPress(event) {[m
[32m+[m[32m    if (event.code === 'Escape') {[m
[32m+[m[32m      toggleModal();[m
[32m+[m[32m    }[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  // --- 4. –ì–æ–ª–æ–≤–Ω–∞ —Ñ—É–Ω–∫—Ü—ñ—è –¥–ª—è –æ–±—Ä–æ–±–∫–∏ —Ç–∞ –≤—ñ–¥–ø—Ä–∞–≤–∫–∏ —Ñ–æ—Ä–º–∏ ---[m
[32m+[m[32m  async function handleFormSubmit(event) {[m
[32m+[m[32m    event.preventDefault();[m
[32m+[m
[32m+[m[32m    const formData = new FormData(event.currentTarget);[m
[32m+[m[32m    const data = {[m
[32m+[m[32m      name: formData.get('name').trim(),[m
[32m+[m[32m      rating: parseFloat(formData.get('rating')),[m
[32m+[m[32m      descr: formData.get('message').trim(),[m
[32m+[m[32m    };[m
[32m+[m
[32m+[m[32m    // –î–µ—Ç–∞–ª—å–Ω–∞ –≤–∞–ª—ñ–¥–∞—Ü—ñ—è –∑–≥—ñ–¥–Ω–æ –∑—ñ —Å—Ö–µ–º–æ—é API[m
[32m+[m[32m    if (!data.name || !data.descr || !data.rating) {[m
[32m+[m[32m      alert('–ë—É–¥—å –ª–∞—Å–∫–∞, –∑–∞–ø–æ–≤–Ω—ñ—Ç—å –≤—Å—ñ –ø–æ–ª—è!');[m
[32m+[m[32m      return;[m
[32m+[m[32m    }[m
[32m+[m[32m    if (data.name.length < 2 || data.name.length > 16) {[m
[32m+[m[32m      alert('–Ü–º\'—è –ø–æ–≤–∏–Ω–Ω–æ –º—ñ—Å—Ç–∏—Ç–∏ –≤—ñ–¥ 2 –¥–æ 16 —Å–∏–º–≤–æ–ª—ñ–≤.');[m
[32m+[m[32m      return;[m
[32m+[m[32m    }[m
